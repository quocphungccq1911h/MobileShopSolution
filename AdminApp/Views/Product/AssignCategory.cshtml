@model MobileShop.ViewModels.Catalog.Products.CategoryAssignRequest

@{
    ViewData["Title"] = "Gán danh mục sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="assign-role">
    <div class="container-fluid px-4">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card shadow-lg border-0 rounded-lg mt-7">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Gán danh mục sản phẩm</h3></div>
                    <div class="card-body">
                        <form asp-action="AssignCategory" class="container">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            @for (var i = 0; i < Model.Categories.Count; i++)
                            {
                                <div class="form-group">
                                    <lable class="form-check-label">
                                        @Model.Categories[i].Name
                                        <input type="checkbox" class="form-check-input" asp-for="Categories[i].Selected" />
                                        <input type="hidden" asp-for="Categories[i].Id" />
                                        <input type="hidden" asp-for="Categories[i].Name" />
                                    </lable>
                                </div>
                            }
                            <div class="form-group">
                                <input type="submit" value="Cập nhật" class="btn btn-primary" />
                            </div>
                        </form>
                        <div>
                            <a asp-action="Index">Quay lại danh sách</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

