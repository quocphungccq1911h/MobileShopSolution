@model MobileShop.ViewModels.System.Users.RegisterRequest

@{
    ViewData["Title"] = "Tạo mới tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Tạo mới tài khoản</h3></div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-3 mb-md-0">
                                    <input class="form-control" asp-for="FirstName" type="text" placeholder="Enter your first name" />
                                    <label asp-for="FirstName">Tên</label>
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="LastName" class="form-control" id="inputLastName" type="text" placeholder="Enter your last name" />
                                    <label asp-for="LastName">Họ</label>
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-3 mb-md-0">
                                    <input class="form-control" asp-for="UserName" type="text" placeholder="Enter your first name" />
                                    <label asp-for="UserName">Tài khoản</label>
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Email" class="form-control" id="inputLastName" type="text" placeholder="Enter your last name" />
                                    <label asp-for="Email">Hòm thư</label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-3 mb-md-0">
                                    <input class="form-control" asp-for="PhoneNumber" type="text" placeholder="Enter your first name" />
                                    <label asp-for="PhoneNumber">Điện thoại</label>
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Dob" class="form-control" placeholder="Enter your last name" />
                                    <label asp-for="Dob">Ngày sinh</label>
                                    <span asp-validation-for="Dob" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-3 mb-md-0">
                                    <input class="form-control" asp-for="Password" type="password" placeholder="Create a password" />
                                    <label asp-for="Password">Mật khẩu</label>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3 mb-md-0">
                                    <input class="form-control" asp-for="ConfirmPassword" type="password" placeholder="Confirm password" />
                                    <label asp-for="ConfirmPassword">Xác nhận mật khẩu</label>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="mt-4 mb-0">
                            <div class="d-grid"><button class="btn btn-primary" type="submit">Tạo mới tài khoản</button></div>
                        </div>
                    </form>
                </div>
            </div>
            <div>
                <a asp-action="Index">Về danh sách tài khoản</a>
            </div>
        </div>
        
    </div>
</div>

