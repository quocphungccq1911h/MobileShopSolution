@model MobileShop.ViewModels.System.Users.UserUpdateRequest

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Cập nhật tài khoản</h3></div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-3 mb-md-0">
                                    <input class="form-control" asp-for="FirstName" type="text" placeholder="Enter your first name" />
                                    <label asp-for="FirstName">Tên</label>
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="LastName" class="form-control" id="inputLastName" type="text" placeholder="Enter your last name" />
                                    <label asp-for="LastName">Họ</label>
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-3 mb-md-0">
                                    <input class="form-control" asp-for="PhoneNumber" type="text" placeholder="Enter your first name" />
                                    <label asp-for="PhoneNumber">Điện thoại</label>
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Dob" class="form-control" placeholder="Enter your last name" />
                                    <label asp-for="Dob">Ngày sinh</label>
                                    <span asp-validation-for="Dob" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md">
                                <div class="form-floating mb-3 mb-md-0">
                                    <input class="form-control" asp-for="Email" type="text" placeholder="Enter your first name" />
                                    <label asp-for="Email">Hòm thư</label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                           
                        </div>
                        
                        <div class="mt-4 mb-0">
                            <div class="d-grid"><button class="btn btn-primary" type="submit">Cập nhật</button></div>
                        </div>
                    </form> 
                </div>
            </div>
            <div>
                <a asp-action="Index">Về danh sách tài khoản</a>
            </div>
        </div>

    </div>
</div>
